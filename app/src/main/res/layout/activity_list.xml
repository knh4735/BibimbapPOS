<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/asdf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:text="번호"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_horizontal"
            android:text="메뉴"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:text="가격 (₩)"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="수량"
            android:textColor="#000000"
            android:textSize="25sp" />
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/listWrap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.example.nagion.myapplication.DayHistoryActivity">

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/totalWrap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="합계"
            android:textColor="#000000"
            android:textSize="35sp" />


        <TextView
            android:id="@+id/totalAll"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="35sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="현금"
            android:textColor="#000000"
            android:textSize="35sp" />


        <TextView
            android:id="@+id/totalCash"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="35sp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="카드"
            android:textColor="#000000"
            android:textSize="35sp" />


        <TextView
            android:id="@+id/totalCard"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/selBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="#000000"
            android:background="#F3EEEE"
            android:text="선택삭제"/>
        <Button
            android:id="@+id/allBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="#000000"
            android:background="#F3EEEE"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="정산"/>
        <Button
            android:id="@+id/salesBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="#000000"
            android:background="#F3EEEE"
            android:text="일자별 매출"/>
    </LinearLayout>
    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="25sp"
        android:textColor="#000000"
        android:background="#F3EEEE"
        android:layout_marginTop="5dp"
        android:text="뒤로" />
</LinearLayout>
